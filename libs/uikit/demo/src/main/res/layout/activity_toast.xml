<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ToastFragment">
    <com.hl.uikit.UIKitToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:uikit_title="轻提示" />

    <com.hl.uikit.KDividerView
        android:id="@+id/dividerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:text="轻提示 Toast"
                android:textColor="#ff333333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.hl.uikit.form.UIKitFormGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <com.hl.uikit.form.UIKitFormItemText
                    android:id="@+id/item1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    app:uikit_formLabel="文字提示"
                    app:uikit_formRightIcon="@drawable/icon_arrow_right"/>
                <com.hl.uikit.form.UIKitFormItemText
                    android:id="@+id/item2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:uikit_formLabel="成功提示"
                    android:foreground="?attr/selectableItemBackground"
                    app:uikit_formRightIcon="@drawable/icon_arrow_right"/>
                <com.hl.uikit.form.UIKitFormItemText
                    android:id="@+id/item3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:uikit_formLabel="失败提示"
                    android:foreground="?attr/selectableItemBackground"
                    app:uikit_formRightIcon="@drawable/icon_arrow_right"/>

            </com.hl.uikit.form.UIKitFormGroup>
        </LinearLayout>
    </ScrollView>

</LinearLayout>