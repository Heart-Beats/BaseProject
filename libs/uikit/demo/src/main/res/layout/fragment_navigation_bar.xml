<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dialogs.HalfScreenFragment">

    <com.hl.uikit.UIKitToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:uikit_title="导航栏" />

    <com.hl.uikit.KDividerView
        android:id="@+id/dividerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.core.widget.NestedScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:text="导航栏 NavigationBar"
                android:textColor="#ff333333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.hl.uikit.form.UIKitFormHeaderActionText
                style="@style/HeaderTipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:uikit_formLabel="无背景色" />

            <com.hl.uikit.form.UIKitFormGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.hl.uikit.form.UIKitFormItemText
                    android:id="@+id/itemSheet1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:uikit_formLabel="标准"
                    app:uikit_formRightIcon="@drawable/icon_arrow_right" />

                <com.hl.uikit.form.UIKitFormItemText
                    android:id="@+id/itemSheet2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:uikit_formLabel="不带返回图标"
                    app:uikit_formRightIcon="@drawable/icon_arrow_right" />

                <com.hl.uikit.form.UIKitFormItemText
                    android:id="@+id/itemSheet9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:uikit_formLabel="带更多图标"
                    app:uikit_formRightIcon="@drawable/icon_arrow_right" />

                <com.hl.uikit.form.UIKitFormItemText
                    android:id="@+id/itemSheet3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:uikit_formLabel="带文字按钮"
                    app:uikit_formRightIcon="@drawable/icon_arrow_right" />

                <com.hl.uikit.form.UIKitFormItemText
                    android:id="@+id/itemSheet4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:uikit_formDividerEnable="false"
                    app:uikit_formLabel="带搜索图标"
                    app:uikit_formRightIcon="@drawable/icon_arrow_right" />
            </com.hl.uikit.form.UIKitFormGroup>


            <com.hl.uikit.form.UIKitFormHeaderActionText
                style="@style/HeaderTipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:uikit_formLabel="有背景色" />

            <com.hl.uikit.form.UIKitFormGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.hl.uikit.form.UIKitFormItemText
                    android:id="@+id/itemSheet5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:uikit_formLabel="标准"
                    app:uikit_formRightIcon="@drawable/icon_arrow_right" />

                <com.hl.uikit.form.UIKitFormItemText
                    android:id="@+id/itemSheet6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:uikit_formLabel="不带返回图标"
                    app:uikit_formRightIcon="@drawable/icon_arrow_right" />

                <com.hl.uikit.form.UIKitFormItemText
                    android:id="@+id/itemSheet11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:uikit_formLabel="带更多图标"
                    app:uikit_formRightIcon="@drawable/icon_arrow_right" />

                <com.hl.uikit.form.UIKitFormItemText
                    android:id="@+id/itemSheet7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:uikit_formLabel="带文字按钮"
                    app:uikit_formRightIcon="@drawable/icon_arrow_right" />

                <com.hl.uikit.form.UIKitFormItemText
                    android:id="@+id/itemSheet8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:uikit_formDividerEnable="false"
                    app:uikit_formLabel="带搜索图标"
                    app:uikit_formRightIcon="@drawable/icon_arrow_right" />
            </com.hl.uikit.form.UIKitFormGroup>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>