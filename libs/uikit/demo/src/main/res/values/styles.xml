<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="UiKit.AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PayTypeListSheetItemStyle" parent="UiKit.ArrayListSheetDialogTheme">
        <item name="uikit_sheet_list_item_color">@color/paytype_item_txt_selector</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/uikit_color_3</item>
    </style>

    <style name="ItemTextAppearanceInactive">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="HeaderTipStyle">
        <item name="android:minHeight">0dp</item>
        <item name="uikit_formLabelBold">false</item>
        <item name="uikit_formLabelColor">@color/uikit_color_4</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="uikit_formLabelMarginEnd">0dp</item>
    </style>
</resources>
