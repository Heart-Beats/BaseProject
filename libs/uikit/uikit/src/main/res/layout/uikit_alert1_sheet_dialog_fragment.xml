<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/uikit_bottom_dialog_background"
    android:backgroundTint="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:textColor="@color/uikit_color_4"
        android:textSize="@dimen/uikit_fontsize_8"
        tools:text="这里提供一行小标题或注释" />

    <com.hl.uikit.KDividerView
        android:id="@+id/dividerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/customLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/viewBgSpace"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/uikit_backgroundColor" />

    <TextView
        android:id="@+id/btnNegative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:padding="15dp"
        android:textColor="@color/uikit_color_3"
        android:textSize="@dimen/uikit_fontsize_7"
        tools:ignore="UnusedAttribute"
        tools:text="取消" />
</LinearLayout>