<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="LinearLayout"
    android:orientation="vertical">

    <com.hl.uikit.form.UIKitFormItemInput
        android:id="@+id/itemInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:uikit_formText="测试文本"
        tools:uikit_formLabel="测试" />

    <FrameLayout
        android:background="@color/uikit_backgroundColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<com.hl.uikit.KDividerView-->
        <!--    android:id="@+id/dividerView"-->
        <!--    android:layout_width="match_parent"-->
        <!--    android:layout_height="wrap_content"-->
        <!--    android:layout_gravity="top"-->
        <!--    android:background="@android:color/white"-->
        <!--    android:paddingStart="15dp"-->
        <!--    android:paddingEnd="0dp" />-->

        <TextView
            android:id="@+id/tvLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:paddingStart="15dp"
            android:paddingEnd="0dp"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="LeftText"
            android:textColor="@color/uikit_color_4"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:paddingStart="0dp"
            android:paddingEnd="15dp"
            tools:text="tvRight"
            android:textColor="@color/uikit_color_9"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="visible" />
    </FrameLayout>
</merge>