<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:parentTag="LinearLayout">

    <LinearLayout
        android:id="@+id/line_feeAddition"
        android:layout_width="match_parent"
        android:layout_height="@dimen/uikit_formItemHeight"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="15dp">

            <TextView

                android:id="@+id/tvLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                tools:text="附加手续费" />


            <com.hl.uikit.UIKitNumberStepView
                android:id="@+id/numberStep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/uikit_form_stepper_color_selector"
                tools:uikit_hasUnit="true"
                app:uikit_operatorVisibility="visible"
                tools:text="0.38"
                tools:uikit_unitValue="%" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="?attr/uikit_dividerColor" />
    </LinearLayout>

</merge>