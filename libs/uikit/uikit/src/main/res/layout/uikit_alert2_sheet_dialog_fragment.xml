<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/uikit_bottom_dialog_background"
    android:backgroundTint="@android:color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/customLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <com.hl.uikit.button.UIKitCommonButton
            android:id="@+id/btnNegative"
            android:layout_width="124dp"
            android:layout_height="42dp"
            android:backgroundTint="@color/uikit_alert2_sheet_negative_bg_tint"
            android:textColor="@color/uikit_color_1"
            android:textSize="@dimen/uikit_fontsize_7"
            app:uikit_buttonStyle="solid_color1_radius4"
            tools:text="取消" />

        <com.hl.uikit.button.UIKitCommonButton
            android:id="@+id/btnPositive"
            android:layout_width="124dp"
            android:layout_height="42dp"
            android:layout_marginStart="20dp"
            app:uikit_buttonStyle="solid_color1_radius4"
            android:textSize="@dimen/uikit_fontsize_7"
            tools:text="确定" />
    </LinearLayout>

</LinearLayout>