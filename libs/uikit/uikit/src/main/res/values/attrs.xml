        <!-- 边框形状，有4种取值：circle、square、rect、none，默认是circle，即圆形，none是没有形状约束 -->
        <attr name="uikit_wl_shape" format="enum">
            <enum name="circle" value="0" />
            <enum name="square" value="1" />
            <enum name="rect" value="2" />
            <enum name="none" value="3" />
        </attr>

        <!-- 文字在控件中的位置，有3种取值：flow、center、top、bottom，默认是flow，即漂浮在波浪上面 -->
        <attr name="uikit_wl_textLocation" format="enum">
            <enum name="flow" value="0" />
            <enum name="center" value="1" />
            <enum name="top" value="2" />
            <enum name="bottom" value="3" />
        </attr>

        <!-- 边框圆角，当 wl_shape = square或rect 才生效，默认是0dp -->
        <attr name="uikit_wl_shapeCorner" format="reference|reference|dimension" />
        <!-- 波浪颜色 -->
        <attr name="uikit_wl_waveColor" format="reference|color" />
        <!-- 波浪的背景颜色 -->
        <attr name="uikit_wl_waveBackgroundColor" format="reference|color" />
        <!-- 波峰，取值范围是0~0.9f，默认是0.2f -->
        <attr name="uikit_wl_waveAmplitude" format="float" />
        <!--  波浪水平移动的速度，取值范围是0~1f，默认是0.5f -->
        <attr name="uikit_wl_waveVelocity" format="float" />
        <!--  边框颜色 -->
        <attr name="uikit_wl_borderColor" format="reference|color" />
