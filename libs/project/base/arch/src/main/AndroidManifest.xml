<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hl.arch">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- WebViewFragment 进行定位时使用 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- requestLegacyExternalStorage: 禁用分区存储, 但在 Android 11 会忽略该字段，强制开启分区存储-->
    <application android:requestLegacyExternalStorage="true">

        <!-- configChanges 属性可配置 activity 自主处理的配置变更项，可在 onConfigurationChanged 方法中处理 -->
        <activity
            android:name=".mvvm.activity.FragmentContainerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait" />
    </application>
</manifest>