<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.TestFragment">

    <com.hl.uikit.UIKitToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:uikit_subtitle="副标题"
        app:uikit_subtitleColor="@color/red"
        app:uikit_subtitleIsBold="true"
        app:uikit_title="测试" />

    <TextView
        android:layout_margin="@dimen/dp_10"
        android:id="@+id/test_span"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试 Span 文本"
        android:textSize="24sp" />

    <com.hl.uikit.UIKitDividerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_10"
        app:uikit_dividerColor="@color/uikit_color_3" />

    <ImageView
        android:id="@+id/test_image"
        android:layout_margin="@dimen/dp_10"
        android:src="@drawable/icon_nodata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="@dimen/dp_10"
        android:id="@+id/test_save_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试保存图片"
        android:textSize="24sp" />


</LinearLayout>